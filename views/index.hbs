<!DOCTYPE html>
<html lang="en" ng-app="kidsFood">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<base href="/">
		<title>KidFood</title>
		
		<!-- Angular -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <!-- Angular Material Dependencies -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-aria.min.js"></script>

		<!-- ngRoute -->
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.min.js"></script>
		<!-- ngResource -->
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-resource.min.js"></script>
		<!-- satellizer -->
		<script src="//cdn.jsdelivr.net/satellizer/0.14.0/satellizer.min.js"></script>
	
		<!-- custom angular js -->
		<script type="text/javascript" src="javascript/app.js"></script>
		<script type="text/javascript" src="javascript/routes.js"></script>
		<script type="text/javascript" src="javascript/controllers/MainCtrl.js"></script>
		<script type="text/javascript" src="javascript/controllers/RecipesCtrl.js"></script>
		<script type="text/javascript" src="javascript/controllers/AuthCtrl.js"></script>
	
		<!-- angular materialize css -->
		<link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.css">
		<!-- material icons -->
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
		<!-- google font -->
		<link href='https://fonts.googleapis.com/css?family=Acme' rel='stylesheet' type='text/css'>
		<!-- custom css -->
		<link type="text/css" rel="stylesheet" href="css/main.css">
	</head>
	<!-- Main container -->
	<body ng-controller="MainCtrl" layout="column">
		<!-- begin toolbar  -->
		<md-toolbar layout="row">
			<a href="/">Home</a>
			<a href="/recipes">Recipes</a>
			<a ng-show="currentUser" href="#" ng-click="logout()">Logout</a>
			<a ng-show="!currentUser" href="/signup">Sign-up</a>
			<a ng-show="!currentUser" href="/login">Login</a>
		</md-toolbar>
		<!-- end toolbar  -->
		<!-- ADD FLASH MESSAGES HERE -->
		<div ng-view layout="row" flex></div>
    <!-- Angular Material Javascript -->
    <script src="//ajax.googleapis.com/ajax/libs/angular_material/1.1.0-rc2/angular-material.min.js"></script>

	</body>
</html>